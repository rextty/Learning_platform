<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8D0"
    tools:context=".learning">


    <Button
        android:id="@+id/StdBtn"
        android:layout_width="305dp"
        android:layout_height="58dp"
        android:backgroundTint="#95CACA"
        android:onClick="LearningChoose"
        android:text="學生登入"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/PrntBtn"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#95CACA"
        android:onClick="Parent"
        android:text="家長登入"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>